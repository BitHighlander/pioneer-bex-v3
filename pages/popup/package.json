{
  "name": "@chrome-extension-boilerplate/popup",
  "version": "0.0.1",
  "description": "chrome extension popup",
  "private": true,
  "sideEffects": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=8192 pnpm run clean && cross-env NODE_OPTIONS=--max_old_space_size=8192 tsc --noEmit && cross-env NODE_OPTIONS=--max_old_space_size=8192 vite build",
    "build:watch": "cross-env NODE_OPTIONS=--max_old_space_size=8192 cross-env __DEV__=true vite build -w --mode development",
    "dev": "cross-env NODE_OPTIONS=--max_old_space_size=8192 pnpm build:watch",
    "lint": "cross-env NODE_OPTIONS=--max_old_space_size=8192 eslint . --ext .ts,.tsx",
    "lint:fix": "cross-env NODE_OPTIONS=--max_old_space_size=8192 pnpm lint --fix",
    "prettier": "cross-env NODE_OPTIONS=--max_old_space_size=8192 prettier . --write --ignore-path ../../.prettierignore",
    "type-check": "cross-env NODE_OPTIONS=--max_old_space_size=8192 tsc --noEmit"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@chrome-extension-boilerplate/shared": "workspace:*",
    "@chrome-extension-boilerplate/storage": "workspace:*",
    "@coinmasters/pioneer-lib": "^0.1.53",
    "@coinmasters/pioneer-react": "^0.7.42",
    "@coinmasters/types": "^4.7.41",
    "@coinmasters/wallet-keepkey": "^13.0.41"
  },
  "devDependencies": {
    "@chrome-extension-boilerplate/tailwindcss-config": "workspace:*",
    "@chrome-extension-boilerplate/tsconfig": "workspace:*",
    "@chrome-extension-boilerplate/hmr": "workspace:*"
  }
}
